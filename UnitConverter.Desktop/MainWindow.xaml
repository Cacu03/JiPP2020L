<Window x:Class="UnitConverter.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnitConverter.Desktop"
        mc:Ignorable="d"
        Title="UnitConverter 3.0" Height="450" Width="800" Background="#63C3FF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="85"/>
            <RowDefinition Height="85"/>
            <RowDefinition Height="220"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="272"/>
        </Grid.ColumnDefinitions>
        <Label Content="Konwerter Jednostek" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="772" Background="#FF326280" Foreground="White" FontWeight="Bold" Height="65" Grid.ColumnSpan="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22"/>
        <ComboBox x:Name="comboboxConverter" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="140" Height="52" HorizontalAlignment="Left" SelectionChanged="comboboxConverter_SelectionChanged" Background="White" FontSize="16" Foreground="#FF587080"/>
        <ComboBox x:Name="comboboxUnitFrom" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="140" Height="52" Grid.Column="1" SelectionChanged="comboboxUnitFrom_SelectionChanged" BorderBrush="#FF509CCC" Background="White" FontSize="16" Foreground="#FF587080"/>
        <TextBlock x:Name="resultTextblock" Grid.Column="3" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="2" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="52" Width="252" Foreground="White" Background="#FF509CCC" FontSize="20"/>
        <TextBox x:Name="inputTextbox" Grid.Column="2" HorizontalAlignment="Left" Height="52" Margin="10,10,0,0" Grid.Row="2" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="180" TextChanged="inputTextbox_TextChanged" Background="#FF509CCC" Foreground="White" FontSize="20"/>
        <Label Content="Wybierz konwerter" HorizontalAlignment="Left" Margin="10,49,0,0" Grid.Row="1" VerticalAlignment="Top" Width="140" Background="#FF326280" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Wybierz jednostkę" HorizontalAlignment="Left" Margin="10,49,0,0" Grid.Row="1" VerticalAlignment="Top" Width="140" Grid.Column="1" Background="#FF326280" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Podaj wartość" Grid.Column="2" HorizontalAlignment="Left" Margin="10,49,0,0" Grid.Row="1" VerticalAlignment="Top" Width="180" Background="#FF326280" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Wynik" Grid.Column="3" HorizontalAlignment="Left" Margin="10,49,0,0" Grid.Row="1" VerticalAlignment="Top" Width="252" Background="#FF326280" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
