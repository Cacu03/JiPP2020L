<Window x:Class="UnitConverter.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnitConverter.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="160" Width="300">
    <Grid Background="#FF4675B1" Margin="0">
        <ComboBox x:Name="typeComboBox" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="253" Height="26" SelectionChanged="TypeComboBox_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ComboBox x:Name="UnitFrom" HorizontalAlignment="Left" Margin="167,53,0,0" VerticalAlignment="Top" Width="106" RenderTransformOrigin="0.748,1.054" SelectionChanged="UnitFrom_SelectionChanged"/>
        <ComboBox x:Name="UnitTo" HorizontalAlignment="Left" Margin="168,88,0,0" VerticalAlignment="Top" Width="105" SelectionChanged="UnitTo_SelectionChanged"/>
        <TextBlock x:Name="UnitToValue" HorizontalAlignment="Left" Margin="20,88,0,20.4" TextWrapping="Wrap" Width="142"/>
        <TextBox x:Name="UnitFromValue" HorizontalAlignment="Left" Height="23" Margin="20,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142" TextChanged="UnitFromValue_TextChanged"/>

    </Grid>
</Window>
