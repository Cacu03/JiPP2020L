<Window x:Class="Konwerter_jednostek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konwerter_jednostek"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="Napis3">
        <Label x:Name="Napis1" Content="Wybierz opcję" HorizontalAlignment="Left" Margin="40,30,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CBOpcja" HorizontalAlignment="Left" Margin="140,34,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="Napis2" Content="Konwersja z" HorizontalAlignment="Left" Margin="40,61,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CBZ" HorizontalAlignment="Left" Margin="140,65,0,0" VerticalAlignment="Top" Width="120" MouseEnter="CBZ_MouseEnter"/>
        <Label Content="Konwersja na" HorizontalAlignment="Left" Margin="289,61,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CBNa" HorizontalAlignment="Left" Margin="390,65,0,0" VerticalAlignment="Top" Width="120" MouseEnter="CBNa_MouseEnter"/>
        <Label x:Name="Napis4" Content="Wartość do konwersji" HorizontalAlignment="Left" Margin="40,92,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TBoxWartosc" HorizontalAlignment="Left" Height="23" Margin="168,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Button1" Content="Przelicz" HorizontalAlignment="Left" Margin="140,132,0,0" VerticalAlignment="Top" Width="148" Click="Button1_Click"/>
        <Label x:Name="Napis5" Content="Wartość po konwersji" HorizontalAlignment="Left" Margin="40,162,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="TBlockWynik" HorizontalAlignment="Left" Margin="168,167,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Height="21"/>


    </Grid>
</Window>
