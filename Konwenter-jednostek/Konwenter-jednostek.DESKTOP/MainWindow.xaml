                    <TranslateTransform/>
                </TransformGroup>
            </Path.RenderTransform>
            <Path.Fill>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF459DBD" Offset="0.07"/>
                    <GradientStop Color="#FF0A0B0C" Offset="0.439"/>
                    <GradientStop Color="#FFC0CFDC" Offset="0.748"/>
                </LinearGradientBrush>
            </Path.Fill>
        </Path>

    </Grid>
</Window>
