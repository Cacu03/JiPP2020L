<Window x:Class="Przelicznik_Jednostke.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Przelicznik_Jednostke.Desktop"
        mc:Ignorable="d"
        Title="Przelicznik Jednostek" Height="700" Width="1000">
    <Grid>
        <TextBox x:Name="TexBox_Number" HorizontalAlignment="Left" Height="25" Margin="25,75,0,0"  Text="" VerticalAlignment="Top" Width="200"/>
        <ComboBox x:Name="ComboBox_Unit" HorizontalAlignment="Left" Height="25" Margin="25,45,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Height="25"  Margin="25,15,0,0" Text="Wybierz jednostki do przeliczenia" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="Button_Convert" Content="Przelicz" HorizontalAlignment="Left" Height="25" Margin="25,105,0,0" VerticalAlignment="Top" Width="200" Click="Button_Convert_Click"/>
        <Label Content="Otrzymany wynik:" HorizontalAlignment="Left" Height="25" Width="200" Margin="25,135,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="TextBlock_Converted" Text="" HorizontalAlignment="Left" Height="25" Width="200" Margin="25,165,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
