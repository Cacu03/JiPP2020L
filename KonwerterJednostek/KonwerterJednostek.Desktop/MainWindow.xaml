<Window x:Class="KonwerterJednostek.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonwerterJednostek.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="234" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="39"/>
            <RowDefinition Height="39"/>
            <RowDefinition Height="39"/>
            <RowDefinition Height="39"/>
            <RowDefinition Height="39"/>
            <RowDefinition Height="39"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="210"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Margin="5,5,5,5">Długość</Label>
        <ComboBox x:Name="combobox" Grid.Row="0" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="1"/>
        <TextBox x:Name="inputTextbox" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="1" Margin="5,5,5,5"/>
        <Button x:Name="Submit" Content="oblicz" Grid.Row="0" Grid.Column="3" Margin="7,7,7,7" Click="Submit_Click"/>
        <TextBlock x:Name="outputTextblock" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="3" Text="" Margin="5,5,5,5"/>

        <Label Grid.Row="1" Grid.Column="0" Margin="5,5,5,5">Energia</Label>
        <ComboBox x:Name="combobox0" Grid.Row="1" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="1"/>
        <TextBox x:Name="inputTextbox0" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="1" Margin="5,5,5,5"/>
        <Button x:Name="Submit0" Content="oblicz" Grid.Row="1" Grid.Column="3" Margin="7,7,7,7" Click="Submit0_Click"/>
        <TextBlock x:Name="outputTextblock0" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="3" Text="" Margin="5,5,5,5"/>

        <Label Grid.Row="2" Grid.Column="0" Margin="5,5,5,5">Temperatura</Label>
        <ComboBox x:Name="combobox1" Grid.Row="2" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="1"/>
        <TextBox x:Name="inputTextbox1" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="1" Margin="5,5,5,5"/>
        <Button x:Name="Submit1" Content="oblicz" Grid.Row="2" Grid.Column="3" Margin="7,7,7,7" Click="Submit1_Click"/>
        <TextBlock x:Name="outputTextblock1" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="3" Text="" Margin="5,5,5,5"/>

        <Label Grid.Row="3" Grid.Column="0" Margin="5,5,5,5">Waga</Label>
        <ComboBox x:Name="combobox2" Grid.Row="3" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="1"/>
        <TextBox x:Name="inputTextbox2" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="1" Margin="5,5,5,5"/>
        <Button x:Name="Submit2" Content="oblicz" Grid.Row="3" Grid.Column="3" Margin="7,7,7,7" Click="Submit2_Click"/>
        <TextBlock x:Name="outputTextblock2" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="3" Text="" Margin="5,5,5,5"/>

        <Button x:Name="actionButton" Content="Zakończ" Grid.Column="5" Grid.Row="4" Grid.ColumnSpan="2" Click="actionButton_Click" Margin="0,0,30,10" />
    </Grid>
</Window>
