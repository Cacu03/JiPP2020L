<Window x:Class="DesktopAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopAPP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Storyboard x:Key="Storyboard1">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="ellipse">
                <EasingDoubleKeyFrame KeyTime="0" Value="9"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="4.5"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="ellipse">
                <EasingDoubleKeyFrame KeyTime="0" Value="-397.5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="22.5"/>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ellipse">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Hidden}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:1" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ellipse">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0.5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Storyboard2"/>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource Storyboard1}"/>
            <BeginStoryboard Storyboard="{StaticResource Storyboard2}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid RenderTransformOrigin="0.625,0.513">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="245*"/>
            <ColumnDefinition Width="151*"/>
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="convCombobox" Margin="10,45,340,334" SelectionChanged="convCombobox_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <ComboBox x:Name="unitFrombox" Margin="10,120,20,259" SelectionChanged="unitFrombox_SelectionChanged"/>
            <ComboBox x:Name="unitTobox" Margin="15,120,10,259" Grid.Column="1"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,15,0,0" TextWrapping="Wrap" Text="Liczba przed konwersją:" VerticalAlignment="Top" Width="155" Grid.Column="1"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"><Run Text="           "/><Run Text="Jednostki:"/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="78,93,0,0" TextWrapping="Wrap" Text="Jednostka Z:" VerticalAlignment="Top" Width="82"/>
            <TextBlock HorizontalAlignment="Left" Margin="83,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="82" Grid.Column="1"><Run Text="Jednostka "/><Run Text="DO"/><Run Text=":"/></TextBlock>
            <TextBlock HorizontalAlignment="Center" Margin="330,20,-242,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" Grid.Column="1" Height="365" FontSize="14" Foreground="Red" TextAlignment="Center"><Run Foreground="{x:Null}" Text="k:"/><Run FontFamily="Consolas" Text="Długości:"/><LineBreak/><Run Text=" "/><Run Text="mile"/><LineBreak/><Run Text="kilometry"/><LineBreak/><Run Text=" "/><Run Text="metry&#x9;"/><LineBreak/><Run/><LineBreak/><Run FontFamily="Consolas" Text="Temperatury:"/><LineBreak/><Run Text="C"/><LineBreak/><Run Text="F "/><LineBreak/><Run Text="K"/><LineBreak/><Run/><LineBreak/><Run FontFamily="Consolas" Text="Czas:"/><LineBreak/><Run Text=" "/><Run Text="S"/><LineBreak/><Run Text="Min "/><LineBreak/><Run Text="H"/><LineBreak/><Run/><LineBreak/><Run Text="W"/><Run FontFamily="Consolas" Text="agi"/><Run Text=":"/><LineBreak/><Run Text="kg"/><LineBreak/><Run Text="funty"/><LineBreak/><Run Text="tony"/><LineBreak/><LineBreak/><LineBreak/><LineBreak/><LineBreak/><LineBreak/><LineBreak/><LineBreak/><LineBreak/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="110,330,0,0" TextWrapping="Wrap" Text="WYNIK:" VerticalAlignment="Top" Height="70" Width="155" FontSize="24" Grid.ColumnSpan="2"/>
            <TextBlock x:Name="clocktextblock" Grid.Column="1" HorizontalAlignment="Left" Margin="70,330,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="65" Height="31"/>
            <TextBox x:Name="minutybox" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="190,45,0,0" TextWrapping="Wrap" Text="minuty" VerticalAlignment="Top" Width="45" Visibility="Hidden"/>
            <TextBlock x:Name="dwukropektext" Grid.Column="1" HorizontalAlignment="Left" Margin="180,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="10"/>
            <Button x:Name="clockbutton" Content="Button for clock conv" HorizontalAlignment="Left" Margin="30,180,0,0" VerticalAlignment="Top" Width="130" Click="clockbutton_Click"/>
            <TextBlock x:Name="minutesb" Grid.Column="1" HorizontalAlignment="Left" Margin="10,330,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="91"/>
            <Ellipse x:Name="ellipse" Grid.Column="1" HorizontalAlignment="Left" Height="150.031" Margin="84.969,210,0,0" Stroke="Black" VerticalAlignment="Top" Width="150.031" RenderTransformOrigin="0.5,0.5" Visibility="Hidden" d:IsLocked="True">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop        Color="Black" Offset="1"/>
                        <GradientStop        Color="White" Offset="0.762"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Path Data="M484.6,209.2 L695.82424,209.2" HorizontalAlignment="Left" Height="12" Margin="102.421,301.834,0,0" Stretch="Fill" Stroke="#FF4B2F2F" StrokeThickness="12" VerticalAlignment="Top" Width="62.579" RenderTransformOrigin="1,0.5" Grid.Column="1">
                <Path.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform x:Name="clockRotation" Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Path.RenderTransform>
            </Path>
        </Grid>
        <TextBox x:Name="inputTextBox" Margin="200,45,65,334" TextChanged="inputTextBox_TextChanged"/>
        <Button x:Name="Button" Margin="175,210,190,169" Click="Button_Click" Content="Konwertuj"/>
        <TextBlock x:Name="outputText" Margin="200,330,110,49"/>

    </Grid>
</Window>
