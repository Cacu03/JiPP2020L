<UserControl x:Class="MottoControl.MottoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MottoControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label HorizontalContentAlignment="Center" Content="Wylosuj motto na dziś" Margin="10,5,10,5" Height="25"/>
            <Button x:Name="LosujMottoButton" Content="Losuj" Margin="10,5,10,5" Width="200" Height="25" Click="LosujMottoButton_Click"/>
            <Label HorizontalContentAlignment="Center"  x:Name="MottoLabel" Margin="10,5,10,5" Height="25"/>
        </StackPanel>            
    </Grid>
</UserControl>
