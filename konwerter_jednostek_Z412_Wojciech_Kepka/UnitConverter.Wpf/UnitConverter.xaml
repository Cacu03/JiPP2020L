<Window x:Class="UnitConverter.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnitConverter.Wpf"
        xmlns:custom="clr-namespace:Custrom.WpfControls;assembly=Custrom.WpfControls"
        mc:Ignorable="d"
        Title="UnitConverter"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <Window.Resources>
        <TransformGroup x:Key="HourTransform">
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform Angle="0"/>
            <TranslateTransform/>
        </TransformGroup>
        <TransformGroup x:Key="Transform1">
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform Angle="0"/>
            <TranslateTransform/>
        </TransformGroup>
        <Storyboard x:Key="ShowClock">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="clockGrid">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="hourPath">
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="minutePath">
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Loading">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ellipse1">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:0.8" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ellipse2">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:0.9" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ellipse3">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.2" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ellipse4">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:1.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ellipse5">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.4" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:1.2" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ellipse6">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.5" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:1.3" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ellipse7">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.6" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:1.4" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="ellipse8">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.7" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:1.5" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>

        </Storyboard>
    </Window.Resources>
    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup"/>
        </VisualStateManager.VisualStateGroups>
        <StackPanel Height="445">
            <TabControl SelectionChanged="TabControl_SelectionChanged">
                <TabItem Header="Converter">
                    <Grid>
                        <StackPanel Background="White">

                            <TextBlock Margin="10,10,10,0">Type:</TextBlock>
                            <ComboBox Name="converterComboBox" Margin="10,5,10,5" SelectionChanged="converterComboBox_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"></TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBlock Margin="10,10,10,0">Units:</TextBlock>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="0.1*"/>
                                    <ColumnDefinition  Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox Name="unitFromComboBox" Margin="10,5,10,5" Grid.Column="0"></ComboBox>
                                <TextBlock Grid.Column="1" Margin="0,10,0,10">To:</TextBlock>
                                <ComboBox Name="unitToComboBox" Margin="10,5,10,5" Grid.Column="2"></ComboBox>
                            </Grid>
                            <TextBox Margin="10,5,10,5" Name="inputTextBox" Height="30" FontSize="16"></TextBox>
                            <Button Height="30" Margin="30,20,30,20" Name="convertButton" FontSize="16" Background="#FFFFB0B0" Click="convertButton_Click">Convert</Button>
                            <Grid x:Name="outputGrid">
                                <Grid x:Name="clockGrid" Opacity="0">
                                    <Grid x:Name="clock" Margin="10">
                                        <Ellipse Fill="#FFF4F4F5" Height="167" Stroke="Black" Width="167.308" RenderTransformOrigin="0.5,0.5" Margin="110,0,118,0">
                                            <Ellipse.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform/>
                                                    <SkewTransform/>
                                                    <RotateTransform Angle="0"/>
                                                    <TranslateTransform/>
                                                </TransformGroup>
                                            </Ellipse.RenderTransform>

                                        </Ellipse>
                                        <Path x:Name="minutePath" Data="M365,117.58 L365,34.647" Height="83.933" Stretch="Fill" Stroke="Black" Width="1" RenderTransformOrigin="0.5,1" Margin="193.5,0.345,201.5,82.722" >
                                            <Path.Fill>
                                                <ImageBrush/>
                                            </Path.Fill>
                                            <Path.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform/>
                                                    <SkewTransform/>
                                                    <RotateTransform Angle="0"/>
                                                    <TranslateTransform/>
                                                </TransformGroup>
                                            </Path.RenderTransform>
                                        </Path>
                                        <Path x:Name="hourPath" Data="M365,117.58 L365,34.647" Fill="#FFF4F4F5" Height="42.744" Stretch="Fill" Stroke="Red" Width="1" RenderTransformOrigin="0.5,1" Margin="194,40.534,202,83.722">
                                            <Path.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform/>
                                                    <SkewTransform/>
                                                    <RotateTransform Angle="0"/>
                                                    <TranslateTransform/>
                                                </TransformGroup>
                                            </Path.RenderTransform>
                                        </Path>
                                    </Grid>
                                </Grid>
                                <TextBox x:Name="outTextBox" Opacity="0" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" Text="" IsReadOnly="True" VerticalAlignment="Top" Width="405"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Statistics" Height="22" VerticalAlignment="Bottom">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <StackPanel>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Center" FontWeight="Bold">Top 3 Conversions</TextBlock>
                                    <Expander Grid.Column="1">
                                        <ListView x:Name="topConversionUnitsListView">
                                            <ListView.View>
                                                <GridView>
                                                    <GridViewColumn Header="Converter" DisplayMemberBinding="{Binding converter}"></GridViewColumn>
                                                    <GridViewColumn Header="Input Unit" DisplayMemberBinding="{Binding inputUnit}"></GridViewColumn>
                                                    <GridViewColumn Header="Output Unit" DisplayMemberBinding="{Binding outputUnit}"></GridViewColumn>
                                                    <GridViewColumn Header="Total" DisplayMemberBinding="{Binding count}"></GridViewColumn>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                    </Expander>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Column="1">
                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Center" FontWeight="Bold">Filters</TextBlock>
                                    <Grid Margin="0,20,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"></ColumnDefinition>
                                            <ColumnDefinition Width="1*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Margin="10,0">Start date:</TextBlock>
                                            <DatePicker x:Name="startDatePicker" Margin="10,0" SelectedDateChanged="startDatePicker_SelectedDateChanged"/>
                                            <TextBlock Margin="10,0">End date:</TextBlock>
                                            <DatePicker x:Name="endDatePicker" Margin="10,0" SelectedDateChanged="endDatePicker_SelectedDateChanged"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Margin="10,0">Converter Type</TextBlock>
                                            <ComboBox x:Name="converterFilterComboBox" Margin="10,0" SelectionChanged="converterFilter_SelectionChanged"></ComboBox>
                                            <Button x:Name="clearFiltersButton" Width="80" Height="20" Margin="10,20,0,0" HorizontalAlignment="Left">
                                                Clear Filters
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" x:Name="controlGrid" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"></ColumnDefinition>
                                    <ColumnDefinition Width="40"></ColumnDefinition>
                                    <ColumnDefinition Width="80"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="previousPageButton" Grid.Column="0" Height="20" Background="#FFFFB0B0">Previous</Button>
                                <TextBlock x:Name="pageNumberTextBlock" Text="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                <Button x:Name="nextPageButton" Grid.Column="2" Height="20" Background="#FFFFB0B0">Next</Button>
                            </Grid>
                            <ListView x:Name="dbListView" HorizontalAlignment="Left" Height="298" VerticalAlignment="Top" Grid.Row="1" Margin="0,0,0,-40">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding id}"></GridViewColumn>
                                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding date}"></GridViewColumn>
                                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding converter}"></GridViewColumn>
                                        <GridViewColumn Header="Input Value" DisplayMemberBinding="{Binding inputValue}"></GridViewColumn>
                                        <GridViewColumn Header="Input Unit" DisplayMemberBinding="{Binding inputUnit}"></GridViewColumn>
                                        <GridViewColumn Header="Output Value" DisplayMemberBinding="{Binding outputValue}"></GridViewColumn>
                                        <GridViewColumn Header="Output Unit" DisplayMemberBinding="{Binding outputUnit}"></GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>


                    </StackPanel>
                </TabItem>
                <TabItem Header="Rating">
                    <Grid Width="200" Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" VerticalAlignment="Center">Rate this app:</Label>
                        <custom:UserRate x:Name="userRatingControl" Grid.Column="1" UserRatingChanged="UserRate_UserRatingChanged"></custom:UserRate>
                    </Grid>
                </TabItem>
            </TabControl>

        </StackPanel>
        <Rectangle Height="445" x:Name="LoadingPageForeground" Fill="#A0000000"></Rectangle>
        <Ellipse x:Name="ellipse7" Fill="#A0000000" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" Margin="162,228,0,0" Visibility="Hidden">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.12" ScaleY="0.12"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse x:Name="ellipse6"  Fill="#A0000000" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" Margin="195,211,0,0" Visibility="Hidden">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.12" ScaleY="0.12"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse x:Name="ellipse8" Fill="#A0000000" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" Margin="130,210,0,0" Visibility="Hidden">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.12" ScaleY="0.12"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse x:Name="ellipse5" Fill="#A0000000" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" Margin="217,173,0,0" Visibility="Hidden">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.12" ScaleY="0.12"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse x:Name="ellipse4" Fill="#A0000000" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" Margin="196,141,0,0" Visibility="Hidden">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.12" ScaleY="0.12"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse x:Name="ellipse3" Fill="#A0000000" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" Margin="162,120,0,0" Visibility="Hidden">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.12" ScaleY="0.12"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse x:Name="ellipse2" Fill="#A0000000" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" Margin="131,141,0,0" Visibility="Hidden">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.12" ScaleY="0.12"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse x:Name="ellipse1" Fill="#A0000000" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.06,0.06" Margin="111,171,0,0" Visibility="Hidden">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.12" ScaleY="0.12"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="38.72" Y="38.72"/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>


    </Grid>
</Window>
