<Window x:Class="UnitConverter.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnitConverter.Wpf"
        mc:Ignorable="d"
        Title="UnitConverter" Height="450" Width="729.699">
    <Grid>
        <StackPanel>
            <ComboBox Name="converterComboBox" Margin="10,5,10,5" SelectionChanged="converterComboBox_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"></TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Grid>
                <ComboBox Name="unitFromComboBox" Margin="10,5,10,5"></ComboBox>

            </Grid>
            <TextBox Margin="10,5,10,5" Name="inputTextBox" Height="30" FontSize="16"></TextBox>
            <Button Height="30" Margin="30,20,30,20" Name="convertButton" FontSize="16" Click="convertButton_Click">Konwertuj</Button>
            <ListView Name="outListView" Height="245" Margin="0,0,-0.333,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Item1}" Width="120"></GridViewColumn>
                        <GridViewColumn Header="Unit" DisplayMemberBinding="{Binding Item2}" Width="40"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

        </StackPanel>
    </Grid>
</Window>
