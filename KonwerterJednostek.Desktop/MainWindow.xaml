<Window x:Class="KonwerterJednostek.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonwerterJednostek.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="113*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="321*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="150*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textboxWejscie_Dlugosc" HorizontalAlignment="Left" Height="23" Margin="0,84,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="94" Grid.Column="2"/>
        <Button x:Name="przyciskKonwersja_Dlugosc" Content="Konwertuj&#xD;&#xA;" HorizontalAlignment="Left" Margin="0,86,0,0" VerticalAlignment="Top" Height="20" Grid.Column="4" Width="144" Background="#FF7FC9F3" Click="przyciskKonwersja_Click"/>
        <Label Content="Wprowadź tekst&#xD;&#xA;" HorizontalAlignment="Left" Margin="0,38,0,0" VerticalAlignment="Top" Width="104" Grid.Column="2" Height="24"/>
        <TextBlock x:Name="textblockWynik_Dlugosc" Grid.Column="5" HorizontalAlignment="Left" Margin="10,86,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="20" Width="108"/>
        <TextBox x:Name="textboxWejscie_Litry" HorizontalAlignment="Left" Height="23" Margin="0,6,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="94" Grid.Column="2" Grid.Row="1"/>
        <Button x:Name="przyciskKonwersja_Litry" Content="Konwertuj&#xA;" HorizontalAlignment="Left" Margin="0,6,0,0" VerticalAlignment="Top" Height="20" Grid.Column="4" Width="144" Background="#FF7FC9F3" Click="przyciskKonwersja_Click" Grid.Row="1"/>
        <TextBlock x:Name="textblockWynik_Litry" Grid.Column="5" HorizontalAlignment="Left" Margin="10,6,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="20" Width="108" Grid.Row="1"/>
        <TextBox x:Name="textboxWejscie_Mas" HorizontalAlignment="Left" Height="23" Margin="0,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="94" Grid.Column="2" Grid.Row="2"/>
        <Button x:Name="przyciskKonwersja_Mas" Content="Konwertuj&#xA;" HorizontalAlignment="Left" Margin="0,9,0,0" VerticalAlignment="Top" Height="20" Grid.Column="4" Width="144" Background="#FF7FC9F3" Click="przyciskKonwersja_Click" Grid.Row="2"/>
        <TextBlock x:Name="textblockWynik_Mas" Grid.Column="5" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="20" Width="108" Grid.Row="2"/>
        <TextBox x:Name="textboxWejscie_Temperatura" HorizontalAlignment="Left" Height="23" Margin="0,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="94" Grid.Column="2" Grid.Row="3"/>
        <Button x:Name="przyciskKonwersja_Temperatura" Content="Konwertuj&#xA;" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Height="20" Grid.Column="4" Width="144" Background="#FF7FC9F3" Click="przyciskKonwersja_Click" Grid.Row="3"/>
        <TextBlock x:Name="textblockWynik_Temperatura" Grid.Column="5" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="20" Width="108" Grid.Row="3"/>
        <ComboBox x:Name="ComboBoxJednostkaDlugosc" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Grid.Column="3" Margin="14,85,0,0" SelectionChanged="ComboBoxJednostkaDlugosc_SelectionChanged"/>
    </Grid>
</Window>
