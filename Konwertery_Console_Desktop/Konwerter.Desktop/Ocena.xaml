<UserControl x:Class="Konwerter.Desktop.Ocena"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Konwerter.Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Label x:Name="titleLabel" Content="Ocena aplikacji:" HorizontalAlignment="Left" Margin="44,10,0,0" VerticalAlignment="Top" Width="92"/>
        <Slider x:Name="gradeSlider" HorizontalAlignment="Left" Margin="44,41,0,0" VerticalAlignment="Top" Width="213" Maximum="5" ValueChanged="slider_ValueChanged"/>
        <Label x:Name="gradeLabel" Content="" HorizontalAlignment="Left" Margin="141,10,0,0" VerticalAlignment="Top" Width="149"/>
        <Button x:Name="sendGradeBtn" Content="Wyślij ocenę" HorizontalAlignment="Left" Margin="74,70,0,0" VerticalAlignment="Top" Width="152" Click="sendGradeBtn_Click"/>

    </Grid>
</UserControl>
