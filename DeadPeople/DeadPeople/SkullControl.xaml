<UserControl x:Class="DeadPeople.SkullControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeadPeople"
             mc:Ignorable="d" 
             Name="skullWindow"
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="139*"/>
            <RowDefinition Height="61*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="contentGrid" Visibility="Collapsed" Grid.RowSpan="2">
            <DockPanel Margin="50">
                <Button Content="Skull" DockPanel.Dock="Bottom" Click="Skull_Click"/>
                <ContentControl Content="{Binding Skull, ElementName=skullWindow}" DockPanel.Dock="Top"/>

            </DockPanel>
        </Grid>
        <Grid x:Name="skullGrid" Visibility="Visible" Grid.RowSpan="2">
            <DockPanel Margin="50">
                <Button Content="Pokaz Czaszke" Click="Skull_Click" Height="100" VerticalAlignment="Top"></Button>
            </DockPanel>
        </Grid>
    </Grid >
</UserControl>
