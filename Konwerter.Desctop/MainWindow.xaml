<Window x:Class="Konwerter.Desctop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konwerter.Desctop"
        mc:Ignorable="d"
        Background="Honeydew"
        Title="" Height="500" Width="500" WindowStartupLocation="CenterScreen">

    <Border Padding="10">
        <StackPanel>
            <TextBlock Text="KONWERTER" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Temperatura" FontWeight="Bold" Grid.Column="0" Grid.Row="0" Margin="15 5"/>
                <TextBlock Text="Chcę przeliczyć:" Grid.Column="0" Grid.Row="1" Margin="10 5"/>
                <TextBox x:Name="TemperaturaTextBox" Grid.Column="0" Grid.Row="2" Margin="10 5" Background="LightGray"/>
                <TextBlock Text="Z:" Grid.Column="0" Grid.Row="3" Margin="10 5"/>
                <ComboBox x:Name="TempComboboxZ" SelectionChanged="TempCombobox_SelectionChanged" Grid.Column="0" Grid.Row="4" Margin="10 5" Padding="5">
                    <ComboBoxItem Content="Celsius"/>
                    <ComboBoxItem Content="Fahrenheit"/>
                    <ComboBoxItem Content="Kelvin"/>
                </ComboBox>
                <TextBlock Text="Na:" Grid.Column="0" Grid.Row="5" Margin="10 5"/>
                <ComboBox x:Name="TempComboboxNa" SelectionChanged="TempCombobox_SelectionChanged" Grid.Column="0" Grid.Row="6" Margin="10 5" Padding="5">
                    <ComboBoxItem Content="Celsius"/>
                    <ComboBoxItem Content="Fahrenheit"/>
                    <ComboBoxItem Content="Kelvin"/>
                </ComboBox>
                <TextBlock Text="Wynik:" Grid.Column="0" Grid.Row="7" Margin="10 5"/>
                <TextBlock x:Name="TempWynik" Text="0" Grid.Column="0" Grid.Row="8" Margin="10 5"/>

                
                <TextBlock Text="Odleglosc" FontWeight="Bold" Grid.Column="1" Grid.Row="0" Margin="15 5"/>
                <TextBlock Text="Chcę przeliczyć:" Grid.Column="1" Grid.Row="1" Margin="10 5"/>
                <TextBox x:Name="OdlegloscTextBox" Grid.Column="1" Grid.Row="2" Margin="10 5" Background="LightGray"/>
                <TextBlock Text="Z:" Grid.Column="1" Grid.Row="3" Margin="10 5"/>
                <ComboBox x:Name="OdlComboboxZ" SelectionChanged="OdlCombobox_SelectionChanged" Grid.Column="1" Grid.Row="4" Margin="10 5" Padding="5">
                    <ComboBoxItem Content="Kilometry"/>
                    <ComboBoxItem Content="Mile"/>
                </ComboBox>
                <TextBlock Text="Na:" Grid.Column="1" Grid.Row="5" Margin="10 5"/>
                <ComboBox x:Name="OdlComboboxNa" SelectionChanged="OdlCombobox_SelectionChanged" Grid.Column="1" Grid.Row="6" Margin="10 5" Padding="5">
                    <ComboBoxItem Content="Kilometry"/>
                    <ComboBoxItem Content="Mile"/>
                </ComboBox>
                <TextBlock Text="Wynik:" Grid.Column="1" Grid.Row="7" Margin="10 5"/>
                <TextBlock x:Name="OdlWynik" Text="0" Grid.Column="1" Grid.Row="8" Margin="10 5"/>

                
                <TextBlock Text="Predkosc" FontWeight="Bold" Grid.Column="2" Grid.Row="0" Margin="15 5"/>
                <TextBlock Text="Chcę przeliczyć:" Grid.Column="2" Grid.Row="1" Margin="10 5"/>
                <TextBox x:Name="PredkoscTextBox" Grid.Column="2" Grid.Row="2" Margin="10 5" Background="LightGray"/>
                <TextBlock Text="Z:" Grid.Column="2" Grid.Row="3" Margin="10 5"/>
                <ComboBox x:Name="PreComboboxZ" SelectionChanged="PreCombobox_SelectionChanged" Grid.Column="2" Grid.Row="4" Margin="10 5" Padding="5">
                    <ComboBoxItem Content="Km/h"/>
                    <ComboBoxItem Content="M/s"/>
                </ComboBox>
                <TextBlock Text="Na:" Grid.Column="2" Grid.Row="5" Margin="10 5"/>
                <ComboBox x:Name="PreComboboxNa" SelectionChanged="PreCombobox_SelectionChanged" Grid.Column="2" Grid.Row="6" Margin="10 5" Padding="5">
                    <ComboBoxItem Content="Km/h"/>
                    <ComboBoxItem Content="M/s"/>
                </ComboBox>
                <TextBlock Text="Wynik:" Grid.Column="2" Grid.Row="7" Margin="10 5"/>
                <TextBlock x:Name="PreWynik" Text="0" Grid.Column="2" Grid.Row="8" Margin="10 5"/>

                
                <TextBlock Text="Waga" FontWeight="Bold" Grid.Column="3" Grid.Row="0" Margin="15 5"/>
                <TextBlock Text="Chcę przeliczyć:" Grid.Column="3" Grid.Row="1" Margin="10 5"/>
                <TextBox x:Name="WagaTextBox" Grid.Column="3" Grid.Row="2" Margin="10 5" Background="LightGray"/>
                <TextBlock Text="Z:" Grid.Column="3" Grid.Row="3" Margin="10 5"/>
                <ComboBox x:Name="WagaComboboxZ" SelectionChanged="WagaCombobox_SelectionChanged" Grid.Column="3" Grid.Row="4" Margin="10 5" Padding="5">
                    <ComboBoxItem Content="Kilogramy"/>
                    <ComboBoxItem Content="Funty"/>
                </ComboBox>
                <TextBlock Text="Na:" Grid.Column="3" Grid.Row="5" Margin="10 5"/>
                <ComboBox x:Name="WagaComboboxNa" SelectionChanged="WagaCombobox_SelectionChanged" Grid.Column="3" Grid.Row="6" Margin="10 5" Padding="5">
                    <ComboBoxItem Content="Kilogramy"/>
                    <ComboBoxItem Content="Funty"/>
                </ComboBox>
                <TextBlock Text="Wynik:" Grid.Column="3" Grid.Row="7" Margin="10 5"/>
                <TextBlock x:Name="WagaWynik" Text="0" Grid.Column="3" Grid.Row="8" Margin="10 5"/>
            </Grid>
            <Button Click="Button_Click" Content="Zakoncz Program" Background="Red" Width="200" Height="50" Margin="0 100"/>
        </StackPanel>
    </Border>
</Window>
