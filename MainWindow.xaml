            <Button x:Name="buttonKonwerujVAT" Content="Oblicz Netto"  Height="35" Background="#FF6DD47E" Foreground="#FF293250" FontWeight="Bold"/>
            <TextBlock x:Name="textblockWynikBrutto" TextWrapping="Wrap" Height="35" Background="White" FontWeight="Bold" TextAlignment="Center" FontSize="20"/>

        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="0">
            <Label x:Name="labelTytul3" Height="50">
                <Label.Background>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                <SkewTransform CenterY="0.5" CenterX="0.5"/>
