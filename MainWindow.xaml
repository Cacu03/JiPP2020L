                </Label.Background>
            </Label>
            <Label x:Name="labelInstrukcjaWpisz" Content="&lt;-Najpierw wpisz wartość!" Height="35" Background="{x:Null}" FontWeight="Bold" FontSize="14" Foreground="White" />
            <Label x:Name="labelInstrukcjaKliknij" Content="&lt;-Następnie kliknij przycisk!" Height="35" Background="{x:Null}" FontWeight="Bold" FontSize="14" Foreground="White"/>
