            <Label x:Name="labelSztuczneTlo1" Height="35" FontWeight="Bold" FontSize="14" />
            <Label x:Name="labelTytulOblicz1" Height="35" Background="{x:Null}" Content="Oblicz zarobioną kwotę netto" Foreground="White" FontSize="13" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" FontWeight="Bold" VerticalAlignment="Center" Margin="4,0">
