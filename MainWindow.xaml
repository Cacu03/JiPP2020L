                                <TranslateTransform/>
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#FF6DD47E" Offset="0"/>
                        <GradientStop Color="#FF293250" Offset="1"/>
                    </LinearGradientBrush>
