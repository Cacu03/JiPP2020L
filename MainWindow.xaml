        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sklep.Desktop"
        xmlns:wlasneKontrolki="clr-namespace:Sklep.Kontrolki;assembly=Sklep.Kontrolki"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1062.5"
>
    <Window.Resources>
        <Storyboard x:Key="storyboardStrzalka" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="pathStrzalka">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="-148.502"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="-234.002"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="pathStrzalka">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="10.317"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="37.817"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="storyboardAnimacja" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="ellipseAnimacja">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="116"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1.5" Value="156"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="198"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2.6" Value="223"/>
                <EasingDoubleKeyFrame KeyTime="0:0:3" Value="242"/>
                <EasingDoubleKeyFrame KeyTime="0:0:3.6" Value="297"/>
                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="333"/>
                <EasingDoubleKeyFrame KeyTime="0:0:4.6" Value="378"/>
                <EasingDoubleKeyFrame KeyTime="0:0:5" Value="421"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="ellipseAnimacja">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="113"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1.5" Value="64"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="111"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2.6" Value="87"/>
                <EasingDoubleKeyFrame KeyTime="0:0:3" Value="112"/>
                <EasingDoubleKeyFrame KeyTime="0:0:3.6" Value="104"/>
                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="114"/>
                <EasingDoubleKeyFrame KeyTime="0:0:4.6" Value="70"/>
                <EasingDoubleKeyFrame KeyTime="0:0:5" Value="192"/>
            </DoubleAnimationUsingKeyFrames>
            <PointAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransformOrigin)" Storyboard.TargetName="ellipseAnimacja">
                <EasingPointKeyFrame KeyTime="0:0:1" Value="-0.351,-1.241"/>
            </PointAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="storyboardLadowanieKulki" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="ellipseLadowanie1">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="ellipseLadowanie2">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="ellipseLadowanie3">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="ellipseLadowanie4">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="ellipseLadowanie5">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="ellipseLadowanie6">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="ellipseLadowanie7">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="ellipseLadowanie8">
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="360"/>
            </DoubleAnimationUsingKeyFrames>

        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource storyboardStrzalka}"/>
            <BeginStoryboard Storyboard="{StaticResource storyboardAnimacja}"/>
            <BeginStoryboard Storyboard="{StaticResource storyboardLadowanieKulki}"/>
        </EventTrigger>
    </Window.Triggers>

