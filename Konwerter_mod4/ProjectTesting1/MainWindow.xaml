<Window x:Class="ProjectTesting1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectTesting1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dg" AutoGenerateColumns="False" >
           <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50*" Binding="{Binding Path=id}">

                </DataGridTextColumn>
                <DataGridTextColumn Header="Item" Width="50*" Binding="{Binding Path=item}"></DataGridTextColumn>
            </DataGrid.Columns>
            

        </DataGrid>
        <TextBlock Grid.Row="1" x:Name="T1" Text="This is the textblock"/>
    </Grid>

</Window>
