<Window x:Class="Converter.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Converter.Desktop"
        mc:Ignorable="d"
        Title="Unit Converter" Height="320" Width="400">
    <Grid Margin="0,10,0,12">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="2" Margin="359,456,0,-39" VerticalAlignment="Top" Width="21"/>
        <Button Content="Convert value" HorizontalAlignment="Left" Margin="152,224,0,0" VerticalAlignment="Top" Width="82" Click="Button_Click"/>
        <ComboBox HorizontalAlignment="Left" Margin="260,47,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" Name="ComboBox1" ItemsSource="{Binding Names}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="236,178,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" Name="ConvertedValue"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="42,178,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" Name="ToConvertValue"/>
        <TextBlock HorizontalAlignment="Left" Margin="132,47,0,0" TextWrapping="Wrap" Text="Convert value to" VerticalAlignment="Top" Height="22" Width="102"/>
        <TextBlock HorizontalAlignment="Left" Margin="56,157,0,0" TextWrapping="Wrap" Text="Value to convert" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="260,157,0,0" TextWrapping="Wrap" Text="Converted value" VerticalAlignment="Top" RenderTransformOrigin="0.337,0.812"/>

    </Grid>
</Window>
