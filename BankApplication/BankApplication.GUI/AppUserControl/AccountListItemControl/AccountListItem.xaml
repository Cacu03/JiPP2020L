<UserControl x:Class="BankApplication.GUI.AppUserControl.AccountListItemControl.AccountListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankApplication.GUI.AppUserControl.AccountListItemControl"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600" 
             Background="#FF2F3D59" Cursor="Hand" Margin="0,10" Height="70">
    <Grid x:Name="mainAccountItemGrid" MouseUp="mainAccountItemGrid_MouseUp">
        <Border BorderThickness="4" BorderBrush="{Binding borderColor}">
            <Label Content="{Binding text, FallbackValue=Default}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Padding="20,0" Foreground="White" FontSize="21" />
        </Border>
    </Grid>
</UserControl>
