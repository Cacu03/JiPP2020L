<Window x:Class="UnitConverter.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnitConverter.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="c1" Grid.Row="0" Grid.Column="0" Margin="50,0,50,75" FontSize="20" SelectionChanged="c1_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBox x:Name="box" Grid.Row="0" Grid.Column="1" Margin="50,0,50,75" FontSize="20"></TextBox>
        
        <ComboBox x:Name="c2" Grid.Row="1" Grid.Column="0" Margin="50,0,50,75" FontSize="20"/>
        <ComboBox x:Name="c3" Grid.Row="1" Grid.Column="1" Margin="50,0,50,75" FontSize="20"/>
        
        <Button x:Name="but" Grid.Row="2" Grid.Column="0" Margin="50,0,50,75" FontSize="20" Click="but_Click">Convert</Button>
        <TextBlock x:Name="block" Grid.Row="2" Grid.Column="1" Margin="50,0,50,0" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center">asadf</TextBlock>
    </Grid>
</Window>
